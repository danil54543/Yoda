@model List<ProjectViewModel>
@{
    ViewBag.Title = "Projects";
    Layout = "_Layout";
    
}

<div class="container py-5">
  
         
    

    @if (Model == null || Model.Count == 0)
    {
        <div style="padding:40px;"></div>
            <div class="row g-0">
                    <div class="card-body text-center">
                        <a class="btn btn-outline-dark"asp-controller="Project" asp-action="Create">Create first project</a>     
                    </div>
            </div>
    }
    else
    {
         <div class="my-3 p-3 bg-body rounded shadow-sm">
             <div class="row">
                 <h6 class="border-bottom pb-2 mb-0">Your projects</h6>
                  <div class="text-end">              
                     <a class="btn btn-success"asp-controller="Project" asp-action="Create">Add Projects</a>
                  </div>               
             </div>
   
        @foreach(var project in Model)
        {
            
    <div class="d-flex text-muted pt-3">
      <svg class="bd-placeholder-img flex-shrink-0 me-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 32x32" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff"></rect><text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text></svg>
      <div class="pb-3 mb-0 small lh-sm border-bottom w-100">
        <div class="d-flex justify-content-between">
          <strong class="text-gray-dark">Full Name</strong>
          <a class="btn btn-close" asp-controller="Project" asp-action="Delete"></a>
        </div>
        <span class="d-block"></span>
      </div>
    </div>
        }
          </div>


    }
</div



@section pageScripts
    {
    <script src="~/js/modal.js"></script>
    <script>
        let modal = $('#modal');

        $('#addProjectId').on('click', function () {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("Create")',
                success: function (response) {
                    modal.find(".modal-body").html(response);
                    modal.modal('show')
                },
                failure: function () {
                    modal.modal('hide')
                }
            });
        });

        $('#saveBtn').on('click', function () {
            const data = $('#formSaveUser').serialize()
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Save")',
                data: data,
                success: function (data) {
                    Swal.fire({
                        title: 'Info',
                        text: data.description,
                        icon: 'success',
                        confirmButtonText: 'Ok'
                    })
                },
                error: function (response) {
                    Swal.fire({
                        title: 'Info',
                        text: response.responseJSON.errorMessage,
                        icon: 'error',
                        confirmButtonText: 'Ok'
                    })
                }
            })
        });
    </script>
}

