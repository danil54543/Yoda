@model ProjectViewModel
@{
    ViewBag.Title = "New project";
    Layout = "_LayoutModal";
}


<form  id="formCreateProject">   
    
    <div class="row">
        <div class="form-group col-md-8">
            <label class="form-label">Title</label>
            <input asp-for="@Model.Title" type="text" class="form-control" id="title" placeholder="" value="" required="">
        </div>
       
        <div class="form-group col-md-8">
            <label class="form-label text-black-50">Category</label>
            <select asp-for=@Model.Category class="form-select" aria-label="Default select example">
                <option selected>Open this select menu</option>
                <option value="Shop">Shop</option>
                <option value="BaberShop">BaberShop</option>
                <option value="Parking">Parking</option>
            </select>
        </div>
       
        <div class="form-group col-md-8">
            <label asp-for="@Model.PhoneNum" class="col-form-label">Phone number</label>
            <input class="form-control" asp-for="@Model.PhoneNum" />
        </div>

        <div class="form-group col-md-8">
            <label asp-for="@Model.Email" class="col-form-label">Email   <span class="text-muted">(Optional)</span></label>
            <input class="form-control" placeholder="you@example.com" asp-for="@Model.Email" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-8">
            <label asp-for="@Model.Country" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Country">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-8">
            <label asp-for="@Model.City" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.City">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-8">
            <label asp-for="@Model.Street" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Street">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Build" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Build">
        </div>
    </div>
    <div class="row">    
         <div class="form-group col-md-8">
            <label class="col-form-label">Logo</label>
            <input asp-for="@Model.Img" class="form-control" type="file">
        </div>
    </div>
     
</form>

        


