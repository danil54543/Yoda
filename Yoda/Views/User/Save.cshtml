@model UserViewModel

<form id="formSaveUser">
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="@Model.Login" class="col-form-label text-black-50"></label>
            <input asp-for="@Model.Login" type="text" class="form-control">
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Password" class="col-form-label text-black-50"></label>
            <input asp-for="@Model.Password" type="password" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Role" class="col-form-label text-black-50"></label>
            <select asp-for="@Model.Role" class="form-control" id="userRoleId"></select>
        </div>
    </div>
</form>

<script src="~/lib/select2/js/select2.full.min.js"></script>
<script>
    $('#userRoleId').select2({
        placeholder: "Choose a role.",
        minimumInputLength: 0,
        allowClear: true,
        ajax: {
            type: "POST",
            url: "@Url.Action("GetRoles", "User")",
            dataType: "json",
            processResults: function (result) {
                return {
                    results: $.map(result, function (val, index) {
                        return {
                            id: index,
                            text: val
                        };
                    }),
                };
            }
        }
    });
</script>
