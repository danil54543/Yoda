<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yoda</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/backImage.css" />



</head>
<body>
    <div class="text-bg-dark ">
        <div class="container">

            <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 text-bg-dark asp-controller="Home" asp-action="Index">


                @if (!User.Identity.IsAuthenticated)
                {
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index"><span style="color:white; font-family:Impact; font-size:30px;">Yoda</span></a>

                    <div class="col-md-3 text-end">
                        <a class="btn btn-primary active text-white" asp-controller="Account" asp-action="Register">Registration</a>
                        <a class="btn btn-outline-success active text-white" asp-controller="Account" asp-action="Login">Log In</a>
                    </div>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="navbar-brand" asp-controller="Todos" asp-action="Todo"><span style="color:white; font-family:Impact; font-size:30px;">Yoda</span></a>
                    <div class="col-md-3 text-end">
                        <a class="btn btn-primary active text-white" asp-controller="Todo" asp-action="Create">Add todo</a>
                        <a class="btn btn-danger" asp-controller="Account" asp-action="Logout">Log Out</a>
                    </div>
                }
            </header>
        </div>
    </div>

    <div class="container-fluid col-xl-12">
        <main role="main">
            @RenderBody()
        </main>

        <div style="padding: 30px;"></div>

    </div>

    <footer class="container">
        <hr class="my-4">
        <p>© 2023 Created 2die4 </p>
    </footer>

    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/bootstrap.bundle.js"></script>
    <script src="~/js/bootstrap.esm.js"></script>
    @await RenderSectionAsync("pageScripts", required: false)

</body>
</html>