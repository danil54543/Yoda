
@model RegisterViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Registration";
}




<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <span class="anchor"></span>
                    <div class="card card-account card-outline-secondary border border-white">
                        <div class="card-body">
                            <form class="row justify-content-center"  asp-controller="Account" asp-action="Register" class="needs-validation" novalidate="">
                                <div class="row g-3 col-lg-4 col-sm-8">
                                    <h1 class="h2 mb-3 fw-normal text-center">Sign Up</h1>
                                    <hr class="my-4">
                                    <div class="col-sm-6 form-outline">
                                        <label for="lastName" class="form-label">Name</label>
                                        <input asp-for="FirstName" type="text" class="form-control" id="firstName"   maxlength="50"  required="">
                                    </div>

                                    <div class="col-sm-6">
                                        <label for="lastName" class="form-label">Surname</label>
                                        <input asp-for="LastName" type="text" class="form-control" id="lastName" maxlength="50" value="" required="">
                                    </div>

                                    <div class="col-12">
                                        <label for="email" class="form-label">Email<span class="text-warning">      (It will be your login)</span></label>
                                        <input asp-for="Login" type="email" class="form-control" id="email" maxlength="50" placeholder="you@example.com">
                                    </div>

                                    <div class="col-6">
                                        <label for="birdDate" class="form-label">Bird date</label>
                                        <input asp-for="BirdDate" type="date" class="form-control" id="birddate" placeholder=" " required="">
                                    </div>                    

                                    <div class="col-12">
                                        <label for="Password" class="form-label">Password</label>
                                        <input autocomplete="new-password" asp-for="Password" type="password"  class="form-control" id="password" value="" required="">
                                    </div>

                                    <div class="col-12">
                                        <label for="email" class="form-label">Confirm the password</label>
                                        <input autocomplete="new-password" asp-for="PasswordConfirm" type="password" class="form-control" id="email"  required="">
                                    </div>
                                    <div asp-validation-summary="All" style="font-size:23px; font-family:Arial" class="text-danger text-center">                                </div>


                                    <div class="d-grid gap-2 d-md-block float-right">
                                        <button class="btn btn-success">Continue</button>
                                    </div>
                                    <div style="padding: 30px;"></div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


