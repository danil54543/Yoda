@section pageScripts
{
    <script>
        $('#saveProfileId').on('click', function (e) {
            e.preventDefault();
            const data = $('#profileFormId').serialize()
            $.ajax({
                url: '@Url.Action("Update", "Profile")',
                type: 'POST',
                data: data,
                success: function (response) {
                    Swal.fire({
                        title: 'Information',
                        text: response.description,
                        icon: 'success',
                        confirmButtonText: 'Ok'
                    })
                },
                error: function (data) {
                    Swal.fire({
                        title: 'Information',
                        text: 'Validation error',
                        icon: 'error',
                        confirmButtonText: 'Ok'
                    })
                }
            });
        });

        $('#saveAccountId').on('click', function (e) {
            e.preventDefault();

            $('#UserLogin').removeAttr('disabled')
            const data = $('#accountFormId').serialize()
            $('#UserLogin').attr('disabled', 'disabled')

            $.ajax({
                url: '@Url.Action("ChangePassword", "Account")',
                type: 'POST',
                data: data,
                success: function (response) {
                    Swal.fire({
                        title: 'Information',
                        text: response.description,
                        icon: 'success',
                        confirmButtonText: 'Ok'
                    })
                },
                error: function (response) {
                    Swal.fire({
                        title: 'Information',
                        text: response.responseJSON.errorMessage,
                        icon: 'error',
                        confirmButtonText: 'Ok'
                    })
                }
            });
        });
    </script>
}
